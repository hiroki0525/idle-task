{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",  ":timezone(Asia/Tokyo)"
  ],
  "labels": ["dependencies"],
  "schedule": [
    "every weekend"
  ],
  "automergeSchedule": [
    "every weekend"
  ],
  "dependencyDashboard": false,
  "packageRules": [
    {
      "groupName": "[all]dependencies (patch)",
      "matchUpdateTypes": ["patch"],
      "automerge": true
    },
    {
      "groupName": "dependencies (major and minor)",
      "matchUpdateTypes": ["major", "minor"],
      "matchPaths": ["package.json"]
    },
    {
      "groupName": "[website]dependencies (major and minor)",
      "matchUpdateTypes": ["major", "minor"],
      "matchPaths": ["website/"]
    }
  ]
}
